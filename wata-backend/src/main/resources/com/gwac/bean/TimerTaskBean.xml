  <bean id="ot2ReFollowUpJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="ot2ReFollowUP" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="ot2CheckJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="ot2CheckService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="findMoveObjectJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="findMoveObjectService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="otTmplJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="otTmplService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="followUpRecordJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="followUpRecordService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="followUpObservationJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="fuoTriggerService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="imageStatusParmJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="imageStatusParmService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="addMissedCutImageJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="fitsFileCutService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="moveDataToHisJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataBackupService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="fileTransferJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="fileTransferService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="dataSyncJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="dataSyncService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="monitorImageSyncJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="monitorImageSyncService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 

  <bean id="otObsRecordJob" 
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
    <property name="targetObject" ref="otObserveRecordService" /> 
    <property name="targetMethod" value="startJob" /> 
    <property name="concurrent" value="false" />
  </bean> 
  
  <bean id="ot2ReFollowUpTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="ot2ReFollowUpJob" />
    <property name="repeatInterval" value="15000" />  
    <property name="startDelay" value="20000" />   
  </bean>
  
  <bean id="otObsRecordTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="otObsRecordJob" />
    <property name="repeatInterval" value="150000000000" />  
    <property name="startDelay" value="5000" />   
  </bean>
  
  <bean id="ot2CheckTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="ot2CheckJob" />
    <property name="repeatInterval" value="150000000000" />  
    <property name="startDelay" value="10000" />   
  </bean>
  
  <bean id="followUpRecordTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="followUpRecordJob" />
    <property name="repeatInterval" value="15000" />  
    <property name="startDelay" value="5000" />   
  </bean>
  
  <bean id="followUpObservationTrigger" 
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="followUpObservationJob" />
    <property name="repeatInterval" value="120000" />  
    <property name="startDelay" value="10000" />   
  </bean>
    
  <bean id="findMoveObjectTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail" ref="findMoveObjectJob" />
    <property name="repeatInterval" value="15000" />  
    <property name="startDelay" value="5000" />   
  </bean>
  
